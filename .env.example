# Uvarsity Backend Environment Configuration

# Application Settings
NODE_ENV=development
PORT=3000
API_PREFIX=api

# Performance Monitoring
ENABLE_METRICS=true

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=stellr_user
DB_PASSWORD=stellr_password
DB_NAME=stellr_academy

# Prisma Database URL (for PostgreSQL)
DATABASE_URL="postgresql://stellr_user:stellr_password@localhost:5432/stellr_academy?schema=public"

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=1d
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_REFRESH_EXPIRES_IN=7d

# OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Twilio Configuration (for SMS/Phone verification)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=your-twilio-phone-number

# Email Configuration (SMTP)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-email-password
EMAIL_FROM=noreply@stellracademy.com

# File Storage Configuration
STORAGE_TYPE=local
# For AWS S3 (when using cloud storage)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=stellr-academy-media

# Redis Configuration (for caching and sessions)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# CORS Configuration
CORS_ORIGIN=http://localhost:3001

# Application URLs
FRONTEND_URL=http://localhost:3001
BACKEND_URL=http://localhost:3000

# Logging
LOG_LEVEL=info
LOG_FILE=logs/stellr-backend.log

# Media Configuration
MAX_FILE_SIZE=50MB
ALLOWED_FILE_TYPES=.pdf,.mp4,.avi,.mov,.wmv

# Certificate Configuration
CERTIFICATE_TEMPLATE_PATH=templates/certificate.html